<Window x:Class="FsSlAppDialog.TemplateWizardDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="F# Silverlight Version Selection"
        Height="143" Width="525" WindowStartupLocation="CenterOwner" WindowStyle="SingleBorderWindow" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True">
    <Grid VerticalAlignment="Stretch" Height="99">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.926,0.892" StartPoint="-3.039,-1.16">
                <GradientStop Color="Gray"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Canvas VerticalAlignment="Center" Margin="32,8,28,12" Height="80">
            <Button Name="btnOk" Content="OK" Width="50px" Height="20" Canvas.Left="291" Canvas.Top="46" Click="btnOk_Click" />
            <Button Name="btnCancel" Canvas.Left="347" Canvas.Top="46" Content="Cancel" Height="20" Width="74" Click="btnCancel_Click" />
            <ComboBox Canvas.Left="120" Canvas.Top="6" Height="23" Name="cbSilverlightVersion" Width="301">
                <ComboBoxItem Content="4.0" IsSelected="True" />
                <ComboBoxItem Content="5.0" />
            </ComboBox>
            <Label Canvas.Left="6" Canvas.Top="6" Content="Silverlight Version:" Height="28" Name="lblSilverlightVersion" />
        </Canvas>
    </Grid>
</Window>
